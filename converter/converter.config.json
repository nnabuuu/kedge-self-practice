{
  "conversion": {
    "quality": 95,
    "dpi": 150,
    "background": "white",
    "keepOriginal": false,
    "createPlaceholders": true
  },
  "performance": {
    "parallel": 4,
    "maxFileSize": 100,
    "timeout": 30
  },
  "paths": {
    "outputDir": "./output",
    "tempDir": "./temp",
    "reportsDir": "./output/reports"
  },
  "tools": {
    "preferredConverter": "auto",
    "fallbackToPlaceholder": true
  },
  "logging": {
    "verbose": false,
    "generateReport": true,
    "reportFormat": "html"
  }
}