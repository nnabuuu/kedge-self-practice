# Database Configuration
NODE_DATABASE_URL="postgres://username:password@host:port/database"
HASURA_GRAPHQL_DATABASE_URL="postgres://username:password@host:port/database"

# Application Settings
NODE_ENV="development"
API_PORT="8718"
WORKSPACE_NAME="kedge"
QUIZ_STORAGE_PATH="./quiz-storage"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_DB="0"

# Security
JWT_SECRET="change-this-to-a-secure-random-string"
HASURA_SECRET="change-this-to-a-secure-random-string"
HASURA_GRAPHQL_ADMIN_SECRET="change-this-to-a-secure-random-string"

# External APIs
OPENAI_API_KEY="your-openai-api-key-here"
# Optional: Configure OpenAI base URL and organization
# OPENAI_BASE_URL="https://api.openai.com/v1"
# OPENAI_ORGANIZATION="your-org-id"

# Model Configuration for Different Use Cases
# Quiz Parser - Complex task of extracting quiz items from documents
OPENAI_MODEL_QUIZ_PARSER="gpt-4o"          # Default: gpt-4o (best for complex parsing)
OPENAI_TEMP_QUIZ_PARSER="0.7"              # Default: 0.7 (some creativity needed)
OPENAI_MAX_TOKENS_QUIZ_PARSER="4000"       # Default: 4000

# Quiz Renderer - Simpler task of formatting/polishing quiz questions
OPENAI_MODEL_QUIZ_RENDERER="gpt-4o-mini"   # Default: gpt-4o-mini (cost-effective)
OPENAI_TEMP_QUIZ_RENDERER="0.3"            # Default: 0.3 (consistent formatting)
OPENAI_MAX_TOKENS_QUIZ_RENDERER="1000"     # Default: 1000

# Answer Validator - Semantic validation of fill-in-the-blank answers
OPENAI_MODEL_ANSWER_VALIDATOR="gpt-4o-mini" # Default: gpt-4o-mini (fast validation)
OPENAI_TEMP_ANSWER_VALIDATOR="0.3"         # Default: 0.3 (consistent judgment)
OPENAI_MAX_TOKENS_ANSWER_VALIDATOR="500"   # Default: 500

# Knowledge Point Extractor - Extract keywords and match knowledge points
OPENAI_MODEL_KNOWLEDGE_EXTRACTOR="gpt-4o"  # Default: gpt-4o (accurate extraction)
OPENAI_TEMP_KNOWLEDGE_EXTRACTOR="0.3"      # Default: 0.3 (consistent extraction)
OPENAI_MAX_TOKENS_KNOWLEDGE_EXTRACTOR="1000" # Default: 1000

# Hasura Configuration
HASURA_ENDPOINT="http://localhost:28717"
HASURA_VERSION="2.35.1"
HASURA_GRAPHQL_SERVER_PORT="28717"

# Development Settings
DEV_NETWORK_NAME="kedge_network"
ENABLE_DEBUG_INFO="true"
LOG_LEVEL="debug"

# Paths
NX_WORKSPACE_ROOT="/path/to/your/backend"
FIXTURE_DIR="/path/to/your/backend/tests/fixtures"